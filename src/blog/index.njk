layout: layouts/base.njk
nav: true
title: Blog
eleventyExcludeFromCollections: true
---

<main class="container main-content td-blog">
  <h1>The Tampa Devs Blog…</h1>
  <a class="td-alert-banner" href="/volunteer">✍️ Write for Tampa Devs!</a>
  <ul class="listing">
    {% for post in collections.posts | reverse %}
      <li class="listing__item">
        {% if post.data.canonical %}
          <a href="{{ post.data.canonical }}" target="_blank" rel="noopener" class="listing__item__link listing__item__link--remote">
          {% else %}
            <a href="{{ post.url }}" class="listing__item__link">
            {% endif %}
            <date>{{ post.data.date | readableDate }}</date>
            <h2 class="listing__item__title">{{ post.data.title }}</h2>
            {% if post.data.intro %}
              <p>{{ post.data.intro }}</p>
            {% endif %}
          </a>
        </li>
      {% endfor %}
    </ul>
  </main>